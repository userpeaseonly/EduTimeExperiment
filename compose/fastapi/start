#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

echo "ğŸ“¦ Waiting for the database to be ready..."
# Optional: use `wait-for-it` or `sleep` if needed
# sleep 5

CPU_CORES=$(nproc)
WORKERS=$((2 * CPU_CORES + 1))

WORKERS=$((WORKERS / 8)) # Adjusting workers to 1/4 of the calculated value

echo "ğŸ–¥ï¸ Detected CPU cores: $CPU_CORES"
echo "ğŸ‘· Configuring Uvicorn workers: $WORKERS"

echo "â³ Waiting for PostgreSQL to be ready..."
until pg_isready -h db -p 5432 -U $POSTGRES_USER; do
    echo "Waiting for DB..."
    sleep 1
done
echo "âœ… PostgreSQL is ready"

echo "ğŸ”§ Running Alembic migrations..."
alembic upgrade head

echo "ğŸš€ Starting FastAPI with Uvicorn..."
exec uvicorn main:app --host 0.0.0.0 --port 8000 --workers $WORKERS --proxy-headers
